<figure class="responsive-image">
  {{#if (and @path @sizes @formats)}}
    <picture
      {{did-insert this.didInsert}}
      {{will-destroy this.willDestroy}}
    >
      {{#if this.showImage}}
        {{#if webp}}
          <source
            srcset="{{cdn}}/{{@path}}@{{this.optimalWidth}}x{{this.optimalHeight}}.webp"
            type="image/webp"
          >
        {{/if}}

        <img
          src="{{cdn}}/{{@path}}@{{this.optimalWidth}}x{{this.optimalHeight}}.jpg"
          width={{this.optimalWidth}}
          height={{this.optimalHeight}}
          alt={{@alt}}
          onload={{this.onLoad}}
          onerror={{this.onError}}
        >
      {{/if}}
    </picture>
    {{#if @caption}}
      <figcaption>{{@caption}}</figcaption>
    {{/if}}
  {{else}}
    <img
      src="{{cdn}}/images/logos/secondary-interflux-electronics-symbol-1.svg"
      width="100"
      height="100"
      class="blank"
    >
  {{/if}}
</figure>