<Section @id="spacer" />

<Section @id="languages">
  {{#each this.languages as |language|}}
    {{#if (eq language.supported true)}}
      <Button::Route
        @route="home"
        @model={{language.id}}
      >
        <img src="{{cdn}}/images/flags/{{language.id}}.png">
        <p>{{language.nameNative}}</p>
      </Button::Route>
    {{else}}
      <Button::Url @href="{{old-host}}/{{language.id}}">
        <img src="{{cdn}}/images/flags/{{language.id}}.png">
        <p>{{language.nameNative}}</p>
      </Button::Url>
    {{/if}}
  {{/each}}
</Section>

<Section @id="copyright">
  <p>&copy; 1980 - {{this.year}} Interflux Electronics &reg;</p>
</Section>