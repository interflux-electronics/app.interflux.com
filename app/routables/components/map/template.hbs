<div class="map">
  {{#mapbox-gl
    initOptions=this.initOptions
    mapLoaded=(action 'mapLoaded') as |map|
  }}
    {{map.on 'click' (action 'mapClicked')}}

    {{#each this.sources as |s|}}
      {{#map.source options=s as |source|}}
        {{source.layer layer=this.sourceLayer }}
      {{/map.source}}
    {{/each}}
  {{/mapbox-gl}}
</div>