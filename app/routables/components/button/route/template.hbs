<!-- TODO: make @model an optional property -->
{{#if @model}}
  <LinkTo
    @route={{@route}}
    @model={{@model}}
    class="button-route button-base {{if @size @size 'medium'}} {{if @style @style 'primary'}}"
  >
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{#if @icon}}
        <Icon @name="{{@icon}}" />
      {{/if}}
      {{@text}}
    {{/if}}
  </LinkTo>
{{else}}
  <LinkTo
    @route={{@route}}
    class="button-route button-base {{if @size @size 'medium'}} {{if @style @style 'primary'}}"
  >
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{#if @icon}}
        <Icon @name="{{@icon}}" />
      {{/if}}
      {{@text}}
    {{/if}}
  </LinkTo>
{{/if}}