{{#if @model}}
  <LinkTo
    @route={{@route}}
    @model={{@model}}
    id={{@id}}
    class="button-base button-route {{if @size @size 'medium'}} {{if @style @style 'primary'}}{{if @class (concat ' ' @class)}}"
  >
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{#if @icon}}
        <Icon @name={{@icon}} />
      {{/if}}
      {{#if @text}}
        <span>{{@text}}</span>
      {{/if}}
    {{/if}}
  </LinkTo>
{{else}}
  <LinkTo
    @route={{@route}}
    id={{@id}}
    class="button-base button-route {{if @size @size 'medium'}} {{if @style @style 'primary'}}{{if @class (concat ' ' @class)}}"
  >
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{#if @icon}}
        <Icon @name={{@icon}} />
      {{/if}}
      {{#if @text}}
        <span>{{@text}}</span>
      {{/if}}
    {{/if}}
  </LinkTo>
{{/if}}