{{#if @model}}
  <LinkTo
    @route={{@route}}
    @model={{@model}}
    id={{@id}}
    class="button-base button-route {{if @size @size 'medium'}} {{if @style @style 'primary'}}"
  >
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{#if @icon}}
        <p>Icon</p>
        <Icon @name={{@icon}} />
      {{/if}}
      {{@text}}
    {{/if}}
  </LinkTo>
{{else}}
  <LinkTo
    @route={{@route}}
    class="button-base button-route {{if @size @size 'medium'}} {{if @style @style 'primary'}}"
    id={{@id}}
  >
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{#if @icon}}
        <Icon @name={{@icon}} />
      {{/if}}
      {{@text}}
    {{/if}}
  </LinkTo>
{{/if}}