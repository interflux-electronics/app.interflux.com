<Page @id="products">
  <Section @class="temporary">
    <Button::Route
      @route="home"
      @text="Home"
      @size="small"
      @style="blue-2"
    />
    <h1>Products</h1>
    <ul>
      {{#each @model.families as |family|}}
        <li>
          <h2>{{family.namePlural}}</h2>

          {{#each family.products as |product|}}
            <p>{{product.name}}</p>
          {{/each}}

          <Button::Route
            @route="products.family"
            @model={{family.slug}}
            @text="see all"
            @size="small"
            @style="grey-border"
          />
        </li>
      {{/each}}
    </ul>
  </Section>
</Page>